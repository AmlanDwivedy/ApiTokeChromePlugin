{
  "manifest_version": 2,
  "author": "Paul Hempshall",

  "name": "API HTTP Headers",
  "version": "1.0.5",
  "description": "Displays the current tabâ€™s HTTP request and response or a Live HTTP Headers tab showing a stream of requests and responses.",

  "background": {
    "page": "headersBackground.html"
  },

  "browser_action": {
    "default_title": "API Token",
    "default_popup": "ApiTokenPopup.html"
  },  

  "options_ui": {
    "page": "headersOptions.html",
    "open_in_tab": true
  },

  "icons": { 
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "64": "icon-64.png",
    "128": "icon-128.png",
    "256": "icon-256.png"
  },

  "permissions": [
      "webRequest", 
      "webRequestBlocking", 
      "http://*/*",
      "https://*/*",
      "tabs", 
      "storage"
   ]
}