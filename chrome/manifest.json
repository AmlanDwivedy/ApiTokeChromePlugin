{
  "manifest_version": 2,
  "author": "Paul Hempshall",

  "name": "HTTP Headers",
  "version": "1.0.0",
  "description": "This extension will show you the current HTTP headers",

  "background": {
    "page": "fetchHeaders.html"
  },

  "browser_action": {
    "default_title": "HTTP Headers",
    "default_popup": "headersPopup.html"
  },

  "icons": { 
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "64": "icon-64.png",
    "128": "icon-128.png",
    "256": "icon-256.png"
  },

  "permissions": [
      "webRequest", 
      "webRequestBlocking", 
      "tabs", 
      "*://*/*"
   ]
}